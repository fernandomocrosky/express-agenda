<%- include("includes/head") %> <%- include("includes/nav") %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>
      <%- include("includes/messages.ejs") %>

      <% if(contatos.length > 0) { %>
        <div class="responsive-table">
          <table class="table table-hover my-3">
            <thead class="table-dark">
              <tr>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% contatos.forEach(contato => { %>
              <tr>
                <td><%= contato.name %></td>
                <td><%= contato.sobrenome %></td>
                <td><%= contato.email %></td>
                <td><%= contato.tel %></td>
                <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
              </tr>
            <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% } else { %>
      <p class="text-cente lead">Não exitem contatos na sua agenda</p>
    <% } %>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include("includes/footer") %>
