<%- include("includes/head") %> <%- include("includes/nav") %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include("includes/messages.ejs") %>
      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se ainda não tem conta, preencha o formulário abaixo</p>
          <form action="/login/register" method="POST">
            <div class="form-group">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <label>Seu email:</label>
              <input type="email" name="email" id="email" class="form-control"/>
            </div>
            <div class="form-group">
              <label>Sua Senha:</label>
              <input type="password" name="password" id="password" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Criar minha conta</button>
          </form>
        </div>
        <div class="col-lg">
          <h4>Faça seu login</h4>

          <p>Se você ja tem uma conta faça login abaixo</p>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Seu email:</label>
              <input type="email" name="email" id="email" class="form-control"/>
            </div>
            <div class="form-group">
              <label>Sua Senha:</label>
              <input type="password" name="password" id="password" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Entrar</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include("includes/footer") %>
